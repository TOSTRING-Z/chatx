{
  "name": "translation",
  "version": "1.2.1",
  "description": "translation",
  "main": "main.js",
  "homepage": ".",
  "private": true,
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "translation",
        "icon": "icon",
        "platform": "all",
        "asar": true,
        "ignore": [
          ".vscode",
          ".git",
          "package-lock.json",
          "run.sh"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^1.6.2",
    "axios-cookiejar-support": "^4.0.7",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^4.0.0",
    "he": "^1.2.0",
    "highlight.js": "^11.9.0",
    "marked": "^10.0.0",
    "marked-highlight": "^2.0.7",
    "prismjs": "^1.29.0",
    "tough-cookie": "^4.1.3"
  },
  "scripts": {
    "start": "electron-forge start --no-sandbox",
    "electron-start": "electron . --no-sandbox",
    "package": "electron-forge package",
    "make-win": "electron-forge make ./ translation --platform=win32 --arch=x64",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.1.0",
    "@electron-forge/maker-deb": "^7.1.0",
    "@electron-forge/maker-squirrel": "^7.1.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.1.0",
    "electron": "^27.1.0",
    "tailwindcss": "^3.3.5"
  }
}
