{
  "compilerOptions": {
    "module": "es2022",      // 或 "esnext", "node16", "nodenext"
    "target": "es2017",      // 或更高版本（如 "es2022"）
    "moduleResolution": "node",  // 模块解析策略
    "outDir": "./dist",  // 输出目录
    "rootDir": "./",  // 源码目录
    "sourceMap": true,  // 启用 sourcemap
    "strict": true,  // 启用严格类型检查
    "noEmit":true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true  // 兼容 CommonJS
  },
  "include": ["./**/*"]  // 包含的文件
}